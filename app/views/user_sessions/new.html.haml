%h1 Login
 
- form_for @user_session, :url => user_session_path do |f|
  %p
    = f.error_messages
  %p
    = f.label :login
    %br
    = f.text_field :login
  %p
    = f.label :password
    %br
    = f.password_field :password
  %p
    = f.check_box :remember_me 
    = f.label :remember_me
  %p
    = f.submit "Login"

= link_to "Forgot password", new_password_reset_path
